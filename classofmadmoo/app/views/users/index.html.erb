<h1>Listing users</h1>

<table border="1">
  <thead>
    <tr>
			<th>Role</th>
			<th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
				<td><%=user.user_role.name if user.user_role%></td>	
				<td><%=user.email%></td>
        <td><%= link_to 'Edit', edit_user_path(user)   if current_user.profesor?%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }  if current_user.profesor?%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

