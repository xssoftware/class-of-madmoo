<h1>Listing work_assignments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Project</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_assignments.each do |work_assignment| %>
      <tr>
        <td><%= work_assignment.user %></td>
        <td><%= work_assignment.project %></td>
        <td><%= work_assignment.title %></td>
        <td><%= work_assignment.body %></td>
        <td><%= link_to 'Show', work_assignment %></td>
        <% if current_user.profesor? %>
          <td><%= link_to 'Edit', edit_work_assignment_path(work_assignment) %></td>
          <td><%= link_to 'Destroy', work_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Work assignment', new_work_assignment_path %>
